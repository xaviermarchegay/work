<div{{ attributes }} data-poll="delay(60000)|$render">
    {% if this.mergeRequests %}
        <h1>Merge Requests</h1>
        <table class="table table-striped table-hover table-borderless">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Source</th>
                    <th>Target</th>
                    <th>Status</th>
                    <th>Assignee</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
            {% for mr in this.mergeRequests %}
                <tr>
                    <td>
                        <a href="{{ mr.web_url }}" target="_blank">
                            {{ ux_icon('bi:gitlab') }}
                        </a>
                    </td>
                    <td>{{ mr.source_branch }}</td>
                    <td>{{ mr.target_branch }}</td>
                    <td>{{ mr.merge_status }}</td>
                    <td>{{ mr.assignee.username }}</td>
                    <td>{{ mr.created_at|date }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
