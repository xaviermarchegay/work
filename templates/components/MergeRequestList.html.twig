<div{{ attributes }} data-poll="delay(5000)|$render">
    {% if this.mergeRequests %}
        <div class="accordion accordion-flush">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseMRList" aria-expanded="true" aria-controls="collapseOne">
                        {{ this.title }}
                    </button>
                </h2>
                <div id="collapseMRList" class="accordion-collapse collapse show">
                    <div class="accordion-body">

                        <h4>{{ this.title }}</h4>
                        <table class="table table-striped table-hover table-borderless">
                            <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Source</th>
                                <th>Target</th>
                                <th>Status</th>
                                <th>Assignee</th>
                                <th>Created</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for mr in this.mergeRequests %}
                                <tr>
                                    <td>
                                        <a href="{{ mr.web_url }}" target="_blank">
                                            {{ ux_icon('bi:gitlab') }}
                                        </a>
                                    </td>
                                    <td>{{ mr.source_branch }}</td>
                                    <td>{{ mr.target_branch }}</td>
                                    <td>{{ mr.merge_status }}</td>
                                    <td>{{ mr.assignee.username|default('n/a') }}</td>
                                    <td>{{ mr.created_at|date }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>