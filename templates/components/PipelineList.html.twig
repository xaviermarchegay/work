<div{{ attributes }} data-poll="delay(5000)|$render">
    {% if this.pipelines %}
        <div class="accordion accordion-flush">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapsePipelineList" aria-expanded="true" aria-controls="collapseOne">
                        {{ this.title }}
                    </button>
                </h2>
                <div id="collapsePipelineList" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        <table class="table table-striped table-hover table-borderless">
                            <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Ref</th>
                                <th>Source</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Updated</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for pipeline in this.pipelines %}
                                <tr>
                                    <td>
                                        <a href="{{ pipeline.web_url }}" target="_blank">
                                            {{ ux_icon('bi:gitlab') }}
                                        </a>
                                    </td>
                                    <td>{{ pipeline.ref }}</td>
                                    <td>{{ pipeline.source }}</td>
                                    <td>{{ pipeline.status }}</td>
                                    <td>{{ pipeline.created_at|date }}</td>
                                    <td>{{ pipeline.updated_at|date }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>