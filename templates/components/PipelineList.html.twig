<div{{ attributes }} data-poll="delay(60000)|$render">
    {% if this.pipelines %}
        <h1>{{ this.title }}</h1>
        <table class="table table-striped table-hover table-borderless">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Ref</th>
                    <th>Source</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Updated</th>
                </tr>
            </thead>
            <tbody>
            {% for pipeline in this.pipelines %}
                <tr>
                    <td>
                        <a href="{{ pipeline.web_url }}" target="_blank">
                            {{ ux_icon('bi:gitlab') }}
                        </a>
                    </td>
                    <td>{{ pipeline.ref }}</td>
                    <td>{{ pipeline.source }}</td>
                    <td>{{ pipeline.status }}</td>
                    <td>{{ pipeline.created_at|date }}</td>
                    <td>{{ pipeline.updated_at|date }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>